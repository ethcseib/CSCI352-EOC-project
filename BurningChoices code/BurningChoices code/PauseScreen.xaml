<Window x:Class="BurningChoices_code.PauseScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BurningChoices_code"
        mc:Ignorable="d"
        Title="PauseScreen" Height="450" Width="800">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Object Model/BurningChoicesPauseScreen.png"/>
        </Canvas.Background>
        <Button x:Name="ResumeButton" Height="94" Canvas.Left="219" Canvas.Top="69" Width="359" Background="Black" BorderBrush="#00707070" Click="ResumeButton_Clicked" Opacity="0"/>
        <Button x:Name="SaveButton" Height="94" Canvas.Left="219" Canvas.Top="180" Width="359" Background="Black" BorderBrush="#00707070" Click="SaveButton_Clicked" Opacity="0"/>
        <Button x:Name="QuitButton" Height="94" Canvas.Left="219" Canvas.Top="291" Width="359" Background="Black" BorderBrush="#00707070" Click="QuitButton_Clicked" Opacity="0"/>

    </Canvas>
</Window>
